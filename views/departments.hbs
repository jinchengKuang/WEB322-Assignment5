<div class="row">
    <div class="col-md-12">
        <h2>
            Departments
            <a href="/departments/add" class="btn btn-success pull-right">Add New Department</a>
        </h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Department Number</th>
                        <th scope="col">Department Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each departments}}
                        <tr>
                            <td>
                                <a href="/employees?department={{this.dataValues.departmentId}}">
                                    {{this.dataValues.departmentId}}
                                </a>                               
                            </td>
                            <td>
                                <a href="/department/{{this.dataValues.departmentId}}">
                                    {{this.dataValues.departmentName}}
                                </a>
                            </td>
                            <td>
                                <a href="/departments/delete/{{this.dataValues.departmentId}}" class="btn btn-danger">
                                    Remove
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
        {{#unless departments}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}

    </div>
</div>
